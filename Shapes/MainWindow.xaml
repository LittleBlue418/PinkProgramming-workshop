<Window x:Class="Shapes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shapes"
        mc:Ignorable="d"
        Title="Robot game" Height="550" Width="500">
    <Grid>
        <Canvas x:Name="canvas" Height="500" Width="400">
            <Image x:Name="robotImg" Source="robot.jpg" Width="48" Height="48" Canvas.Left="1" Canvas.Top="1"></Image>
            <Image x:Name="robotFoodImg" Source="lightning.jpg" Width="48" Height="48" Canvas.Left="51" Canvas.Top="1"></Image>
            <Line x:Name="chargeLine" X1="0" Y1="450" X2="400" Y2="450" Stroke="#FFFFC000" StrokeThickness="5"></Line>    
        </Canvas>
    </Grid>
</Window>
